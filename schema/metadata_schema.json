{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MetadataSchema",
  "type": "object",
  "required": [
    "description",
    "image",
    "name",
    "parent",
    "refs",
    "sources"
  ],
  "properties": {
    "description": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "parent": {
      "type": "string"
    },
    "refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
